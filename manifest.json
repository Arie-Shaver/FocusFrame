{
  "manifest_version": 3,
  "name": "FocusFrame",
  "version": "1.0",
  "description": "Remove animations and summarize text for a distraction-free browsing experience.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo_16.png",
      "48": "logo_48.png",
      "128": "logo_128.png"
    }
  }
}